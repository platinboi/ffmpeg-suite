# FFmpeg Text Overlay API - Environment Variables
# Copy this file to .env and fill in your values

# Database (REQUIRED)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Server Configuration
PORT=8000
CORS_ORIGINS=*

# Cloudflare R2 Storage (Optional)
R2_ENABLED=false
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=

# Merge/Concat Configuration
MAX_MERGE_CLIPS=10
MERGE_TIMEOUT=600

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_TIMEOUT=30

# API Key Persistence (Railway Deployment)
# Set this in Railway environment variables to persist API key across redeployments
# Without this, a new API key will be generated on each deployment
# Get your current key from local data/api_keys.json or generate a new one
# Format: sk_live_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
PERSISTENT_API_KEY=
